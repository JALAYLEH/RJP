@model SubscriptionManagement.Models.ViewModels.Plan.PlanViewModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="PricePerMonth" class="control-label"></label>
    <input asp-for="PricePerMonth" class="form-control" />
    <span asp-validation-for="PricePerMonth" class="text-danger"></span>
</div>

<button type="submit" class="btn btn-primary">Save</button>
<a asp-action="Index" class="btn btn-secondary">Cancel</a>
